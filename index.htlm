<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>QInspired Heritage AR ‚Äì Rimski Termopolij</title>
  
  <script src="https://aframe.io/releases/1.5.0/aframe.min.js"></script>
  <script src="https://raw.githack.com/AR-js-org/AR.js/master/aframe/build/aframe-ar.js"></script>
  
  <style>
    body { 
      margin: 0; 
      overflow: hidden;
    }
    .instructions {
      position: fixed;
      top: 10px;
      left: 50%;
      transform: translateX(-50%);
      background: rgba(0, 0, 0, 0.7);
      color: white;
      padding: 15px 25px;
      border-radius: 10px;
      font-family: Arial, sans-serif;
      z-index: 1000;
      text-align: center;
    }
  </style>
</head>
<body>
  
  <div class="instructions">
    üì∑ Usmjeri kameru na Hiro marker
  </div>

  <a-scene 
    embedded 
    arjs="sourceType: webcam; debugUIEnabled: false; detectionMode: mono_and_matrix; matrixCodeType: 3x3;"
    vr-mode-ui="enabled: false"
    renderer="logarithmicDepthBuffer: true; precision: medium;">
    
    <!-- HIRO MARKER - okidaƒç za AR -->
    <a-marker preset="hiro" id="hiro-marker">
      
      <!-- ANIMIRANA SLIKA - pluta, rotira, pulsira -->
      <a-plane
        src="rimski_termopolij.png"
        width="2"
        height="1.33"
        rotation="-90 0 0"
        position="0 0.5 0"
        material="transparent: true; alphaTest: 0.2; shader: flat"
        
        animation__float="property: position; 
                         dir: alternate; 
                         dur: 3000; 
                         easing: easeInOutSine;
                         loop: true; 
                         to: 0 0.8 0; 
                         from: 0 0.5 0"
        
        animation__sway="property: rotation; 
                        dir: alternate; 
                        dur: 5000; 
                        easing: easeInOutQuad;
                        loop: true; 
                        to: -90 5 3; 
                        from: -90 -5 -3"
        
        animation__scale="property: scale; 
                         dir: alternate; 
                         dur: 2500; 
                         easing: easeInOutQuad;
                         loop: true; 
                         to: 1.1 1.1 1; 
                         from: 1 1 1">
      </a-plane>
      
      <!-- NASLOV iznad slike -->
      <a-entity position="0 1.5 0" rotation="-90 0 0">
        <!-- Shadow -->
        <a-text 
          value="Rimski Termopolij"
          color="#8B4513"
          align="center"
          width="2.5"
          position="0.02 0 -0.02">
        </a-text>
        <!-- Glavni tekst -->
        <a-text 
          value="Rimski Termopolij"
          color="#FFD700"
          align="center"
          width="2.5"
          animation="property: scale; dir: alternate; dur: 2000; loop: true; to: 1.05 1.05 1; from: 1 1 1">
        </a-text>
      </a-entity>
      
      <!-- PODNASLOV -->
      <a-text 
        value="Antiƒçka kavana - 1. stoljeƒáe"
        color="white"
        align="center"
        width="2"
        position="0 1.2 0"
        rotation="-90 0 0">
      </a-text>
      
      <!-- Svjetla za bolju vidljivost -->
      <a-entity light="type: ambient; intensity: 0.6"></a-entity>
      <a-entity light="type: point; intensity: 0.8" position="0 2 1"></a-entity>
      
    </a-marker>
    
    <a-entity camera></a-entity>
  </a-scene>

  <script>
    // Debug - konzola pokazuje kad marker radi
    const marker = document.querySelector('#hiro-marker');
    
    marker.addEventListener('markerFound', function() {
      console.log('‚úÖ Hiro marker detektiran!');
      document.querySelector('.instructions').style.display = 'none';
    });
    
    marker.addEventListener('markerLost', function() {
      console.log('‚ùå Marker izgubljen');
      document.querySelector('.instructions').style.display = 'block';
    });
  </script>
</body>
</html
